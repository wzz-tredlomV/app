<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRFileTransfer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.QRFileTransfer.Button</item>
        <item name="materialCardViewStyle">@style/Widget.QRFileTransfer.CardView</item>
        
        <!-- Action bar -->
        <item name="actionBarStyle">@style/Widget.QRFileTransfer.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.QRFileTransfer.Popup</item>
        
        <!-- Dialog -->
        <item name="alertDialogTheme">@style/Theme.QRFileTransfer.Dialog</item>
        
        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/Widget.QRFileTransfer.BottomNavigation</item>
    </style>

    <!-- Dark theme variant -->
    <style name="Theme.QRFileTransfer.Dark" parent="Theme.Material3.DayNight">
        <item name="android:windowBackground">@color/gray_900</item>
        <item name="android:textColor">@color/text_primary_inverse</item>
        <item name="android:textColorHint">@color/text_secondary_inverse</item>
    </style>

    <!-- Action bar style -->
    <style name="Widget.QRFileTransfer.ActionBar" parent="Widget.Material3.Toolbar">
        <item name="background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <!-- Button style -->
    <style name="Widget.QRFileTransfer.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card view style -->
    <style name="Widget.QRFileTransfer.CardView" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.QRFileTransfer.Dialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width</item>
    </style>

    <!-- Popup overlay -->
    <style name="ThemeOverlay.QRFileTransfer.Popup" parent="ThemeOverlay.Material3.Dark">
        <item name="android:colorBackground">@color/surface</item>
    </style>

    <!-- Bottom navigation style -->
    <style name="Widget.QRFileTransfer.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_tint</item>
        <item name="itemTextColor">@drawable/bottom_navigation_tint</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>


    <!-- Transparent theme for splash screen -->
    <style name="Theme.QRFileTransfer.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Full screen theme for camera -->
    <style name="Theme.QRFileTransfer.FullScreen" parent="Theme.QRFileTransfer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
