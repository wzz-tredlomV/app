<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/screen_padding_horizontal"
    tools:context=".sender.SenderActivity">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送文件"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 文件信息区域 -->
    <ScrollView
        android:id="@+id/svFileInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardQR">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文件名: "
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大小: "
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvFilePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="路径: "
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEstimatedInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预估信息: "
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEncodingInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编码信息: "
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTransferInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="传输信息: "
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 二维码显示区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQR"
        android:layout_width="@dimen/qr_code_size"
        android:layout_height="@dimen/qr_code_size"
        app:layout_constraintTop_toBottomOf="@id/svFileInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressBar"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="二维码"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- 进度条 -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progressTint="@color/progress_primary"
        android:progressBackgroundTint="@color/progress_background"
        app:layout_constraintTop_toBottomOf="@id/cardQR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 进度文本和时间信息 -->
    <LinearLayout
        android:id="@+id/llProgressInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0/0 (0%)"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvTimeRemaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="剩余时间: 0秒"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- 当前块信息 -->
    <TextView
        android:id="@+id/tvCurrentChunk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前块: 0/0"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/llProgressInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvChunkHash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="块哈希: "
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentChunk"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp" />

    <!-- 统计信息 -->
    <TextView
        android:id="@+id/tvStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="统计: "
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/llProgressInfo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvDisplayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示时间: 0ms"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvStats"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp" />

    <!-- 完成信息 -->
    <TextView
        android:id="@+id/tvCompletionInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/status_success"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvChunkHash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCompletionInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_file"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnStartTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_transfer"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnPauseResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
