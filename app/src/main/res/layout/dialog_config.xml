<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 二维码设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="二维码设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 二维码版本 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="二维码版本"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerQrVersion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 纠错级别 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="纠错级别"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerErrorCorrection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 分块大小 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="分块大小"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etChunkSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="字节" />
        </LinearLayout>

        <!-- 显示时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="显示时间"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etDisplayTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="毫秒" />
        </LinearLayout>

        <!-- 压缩设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="压缩设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 启用压缩 -->
        <Switch
            android:id="@+id/switchCompression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启用压缩"
            android:layout_marginBottom="8dp" />

        <!-- 压缩算法 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="压缩算法"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerCompressionAlgorithm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 纠错设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="纠错设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 启用纠错 -->
        <Switch
            android:id="@+id/switchErrorCorrection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启用纠错"
            android:layout_marginBottom="8dp" />

        <!-- 纠错级别 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="纠错级别"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerErrorCorrectionLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- 高级设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高级设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 自动恢复 -->
        <Switch
            android:id="@+id/switchAutoResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自动恢复"
            android:layout_marginBottom="8dp" />

        <!-- 验证每个块 -->
        <Switch
            android:id="@+id/switchVerifyChunks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证每个块"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
